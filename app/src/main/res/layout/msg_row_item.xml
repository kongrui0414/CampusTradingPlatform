<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/msg_row_left"
        >
        <ImageView
            android:id="@+id/msg_left_head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/head"
            />

        <EditText
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/msg_left_text"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="24dp"
            android:paddingRight="12dp"
            android:layout_marginTop="5dp"
            android:maxWidth="200dp"
            android:text="sdsadsahjgjhgjhgjhgghjgjghgjghsdsjgjhgjhgjhggjhhhhhhfffhjjghjkhkjhgjgjgjg"
            android:layout_marginRight="12dp"
            android:background="@drawable/bubble_left"
            android:editable="false"
            android:focusable="false"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/msg_row_right"
        android:gravity="right"
        android:visibility="gone"
        >
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/msg_right_text"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="24dp"
            android:layout_marginTop="5dp"
            android:maxWidth="200dp"
            android:text="sdsadsahjgjhgjhgjhgghjgjghgjghsdsjgjhgjhgjhggjhhhhhhfffhjjghjkhkjhgjgjgjg"
            android:layout_marginRight="5dp"
            android:background="@drawable/bubble1"
            android:editable="false"
            android:focusable="false"
            />

        <ImageView
            android:id="@+id/msg_right_head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/head" />
    </LinearLayout>
</LinearLayout>