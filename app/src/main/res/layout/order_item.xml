<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/order_cardView"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="15dp"
    card_view:cardCornerRadius="7dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/myOrder_maijia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:text="卖家："
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/myOrder_sellerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/myOrder_maijia"
            android:text="小红"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/myOrder_shangpin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/myOrder_maijia"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:text="商品："
            android:textSize="15sp" />

        <TextView
            android:id="@+id/myOrder_goodsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/myOrder_sellerName"
            android:layout_toRightOf="@+id/myOrder_shangpin"
            android:text="可燃乌龙茶"
            android:textSize="18sp"></TextView>

        <TextView
            android:id="@+id/myOrder_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:text="2020.12.02 18:03:53"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/myOrder_shijian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/myOrder_time"
            android:layout_marginLeft="10dp"
            android:text="下单时间："
            android:textSize="10sp" />

        <Button
            android:id="@+id/myOrder_button"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="确认收货"
            android:visibility="visible" />

        <TextView
            android:id="@+id/myOrder_finish"
            android:text="订单已完成"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/myOrder_jiage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@id/myOrder_price"
            android:text="合计：" />

        <TextView
            android:id="@+id/myOrder_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="3dp"
            android:text="19.90"
            android:textSize="20sp" />

        <TextView
                android:id="@+id/myOrder_zhuangtai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_toLeftOf="@+id/myOrder_state"
                android:text="订单状态："
                android:textSize="15sp" />

        <TextView
            android:id="@+id/myOrder_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:text="交易中"
            android:textSize="18sp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>